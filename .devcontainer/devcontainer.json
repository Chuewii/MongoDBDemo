{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "bash .devcontainer/updateContent.sh",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "portsetup": "/bin/bash .devcontainer/setup.sh"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "server/.env"
      ]
    }
  },
  "portsAttributes": {
    "4200": {
      "label": "Client",
      "onAutoForward": "openPreview"
    },
    "5000": {
      "label": "Server"
    }
  },
  "forwardPorts": [4200, 5000]
}
